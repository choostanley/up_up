<%= form_for @user do |f| %>

  <p>
  	<%= f.label "Name" %> <br>
  	<%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "E-mail" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label "Password" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
  <% if session[:user_id == nil] %>
  	<%= f.submit 'Sign Up' %>
  <% else %>
    <%= f.submit 'Edit Profile' %>
  <% end %>
  </p>
<% end %>